<div style="margin:0 auto;">
    <div class="card border-dark mb-3" style="max-width: 100%;margin: 5px;">
      <div class="card-header">Skripten</div>
      <div class="card-body text-dark">


<h1>Order Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_statuses.each do |order_status| %>
      <tr>
        <td><%= order_status.name %></td>
        <td><%= link_to 'Show', order_status %></td>
        <td><%= link_to 'Edit', edit_order_status_path(order_status) %></td>
        <td><%= link_to 'Destroy', order_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order Status', new_order_status_path %>

</div>
</div>
</div>
