<div style="margin:0 auto;">
    <div class="card border-dark mb-3" style="max-width: 100%;margin: 5px;">
      <div class="card-header">Skripten</div>
      <div class="card-body text-dark">

<h1>Antrag Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Beschreibung</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @antrag_statuses.each do |antrag_status| %>
      <tr>
        <td><%= antrag_status.name %></td>
        <td><%= antrag_status.beschreibung %></td>
        <td><%= link_to 'Show', antrag_status %></td>
        <td><%= link_to 'Edit', edit_antrag_status_path(antrag_status) %></td>
        <td><%= link_to 'Destroy', antrag_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Antrag Status', new_antrag_status_path %>
</div>
</div>
</div>
